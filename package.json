{
  "name": "gamer-social-hub",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "clean": "clean-dist.bat",
    "clean:unix": "find ./src -name 'dist' -type d -exec rm -rf {} + 2>/dev/null || true && find ./pages -name 'dist' -type d -exec rm -rf {} + 2>/dev/null || true && find ./components -name 'dist' -type d -exec rm -rf {} + 2>/dev/null || true && rm -rf ./dist 2>/dev/null || true",
    "build:vercel": "npm run clean:unix && prisma generate && next build",
    "deploy": "vercel --prod",
    "deploy:smart": "bash smart-deploy.sh",
    "deploy:auto": "bash auto-deploy.sh",
    "setup": "dev-setup.bat",
    "quick": "quick-deploy.bat",
    "health": "health-check.bat",
    "debug": "debug-helper.bat",
    "commit": "git-commit.bat",
    "menu": "project-menu.bat"
  },
